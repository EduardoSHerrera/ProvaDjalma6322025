@model IEnumerable<WebApplication1.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Vendedores</h2>

<p>
    @Html.ActionLink("Cadastrar novo Vendedor", "NovoUsuario", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Celular)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id } , new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Detalhes", "Visualizar", new { id=item.Id } , new { @class = "btn btn-success" }) 
            @Html.ActionLink("Excluir", "Excluir", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
